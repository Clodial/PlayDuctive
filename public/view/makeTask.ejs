<html>
<head>
    <% include partials/head %>
    <title><%= title %></title>
</head>
<body>
  <% include partials/nav %>
    <form id="taskForm" action="/makeTask/posts" method="post">
      Task Id:<br>
	  <input type="text" name="taskID"><br>
      Status:<br>
      <select name="statusin">
          <option value="1">NOT-STARTED</option>
          <option value="2">INPROGRESS</option>
          <option value="3">COMPLETE</option>
      </select><br>
	  Class:<br>
      <select name="classID">
          <option value="1">Warrior</option>
          <option value="2">Magician</option>
          <option value="3">Rogue</option>
		  <option value="4">Tinkerer</option>
		  <option value="5">Priest</option>
      </select><br>
	  Task Reward(Min:10 Exp | Max:100 Exp):<br>
	  <input type="number" name="taskexp" min="10" max="100"><br>
      Task Description:<br>
      <input type="text" name="taskDesc"><br>
      <!-- form for adding users-->
      Add User to Task:<br>
      <input id="addUser" type="text" name="addUser"><br>
      <select id="userSelect" name="userSelect"></select><br>
	  Users Added to Task:<br>
      <button type="submit">Make Task</button><br>
    </form>

    
    <script src="../js/create_task.js"></script>
    <% include partials/bodyScript %>
</body>
</html>