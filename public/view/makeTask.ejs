<html>
<head>
    <% include partials/head %>
    <title><%= title %></title>
</head>
<body>
  <% include partials/nav %>
  <div class="user-welcome">
	<h1 id="logged-welcome">Making a task for Project: <%= projId %></h1>
  </div>
    <form id="taskForm" action="/makeTask/posts" method="post">
	  Class:<br>
      <select name="classId">
          <option value="Warrior">Warrior</option>
          <option value="Magician">Magician</option>
          <option value="Rogue">Rogue</option>
		  <option value="Tinkerer">Tinkerer</option>
		  <option value="Priest">Priest</option>
      </select><br>
	  Task Reward(Min:10 Exp | Max:100 Exp):<br>
	  <input type="number" name="taskExp" min="10" max="100"><br>
      Task Description:<br>
      <input type="text" name="taskDesc"><br>
      <button type="submit">Make Task</button><br>
    </form>

    
    <script src="../js/create_task.js"></script>
    <% include partials/bodyScript %>
</body>
</html>